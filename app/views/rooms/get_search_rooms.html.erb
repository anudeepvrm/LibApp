<p id="notice"><%= notice %></p>

<h1>Searched Rooms</h1>
<h6>NOTE: Can't Book if you have an active booking</h6>

<table>
  <thead>
  <tr>
    <th>Roomno</th>
    <th>Building</th>
    <th>Size</th>
    <th>Status</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
      <tr>
        <td><%= room.roomno %></td>
        <td><%= room.building %></td>
        <td><%= room.size %></td>
        <td><%= room.status %></td>
        <td><%= link_to_if (room.status == 'available' and Bookedroom.find_by(user_id: @id ).blank?), 'Book', confirm_booking_path(:id => room.roomno, :date=>@date) %></td>

      </tr>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'go to home', user_home_path %>
